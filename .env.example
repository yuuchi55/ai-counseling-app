# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ai_counseling
DB_NAME=ai_counseling

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this

# Encryption Keys
ENCRYPTION_KEY=your-32-character-encryption-key-change-this
HMAC_SECRET=your-hmac-secret-key-change-this

# Session Secret
SESSION_SECRET=your-session-secret-change-this-in-production

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@ai-counseling.com

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Security
BCRYPT_ROUNDS=12
OTP_SECRET=your-otp-secret-change-this
CAPTCHA_SECRET=your-recaptcha-secret-key

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Payment (Optional)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Analytics (Optional)
GA_TRACKING_ID=your-google-analytics-id

# Backup
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_S3_BUCKET=your-s3-backup-bucket

# API Keys
API_KEY_SALT=your-api-key-salt-change-this

# Redis (Optional - for advanced rate limiting)
REDIS_URL=redis://localhost:6379

# SSL/TLS (Production)
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CERT_PATH=/path/to/ssl/cert.pem

# Feature Flags
ENABLE_MFA=true
ENABLE_SESSION_RECORDING=false
ENABLE_AI_MODERATION=true
ENABLE_ANALYTICS=true